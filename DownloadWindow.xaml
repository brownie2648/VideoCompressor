<Window x:Class="VideoCompressor.Windows.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoCompressor"
        mc:Ignorable="d"
        Title="DownloadWindow" Height="150" Width="800" ResizeMode="CanMinimize" WindowStyle="None" MouseDown="Window_MouseDown">
	<Grid x:Name="MainContent" Background="#FF0C0C0C">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="87*"/>
			<ColumnDefinition Width="113*"/>
		</Grid.ColumnDefinitions>
		<TextBlock x:Name="ProgressText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Downloading FFmpeg binaries, this may take a moment..." VerticalAlignment="Top" Height="45" Width="780" TextAlignment="Center" Foreground="White" FontFamily="{StaticResource Quicksand}" Margin="10,75,0,0" FontSize="18" Grid.ColumnSpan="2"/>
		<Grid x:Name="progressWindowBar" Margin="0,0,0,120" Background="#FFDB701A" Height="30" Grid.ColumnSpan="2">
			<TextBlock Text= "Preparing..."
	   Foreground="White"
	   VerticalAlignment="Center"
	   HorizontalAlignment="Left"
	   FontFamily="{StaticResource Quicksand}"
	   FontWeight="Bold" FontSize="16" Height="22" Margin="10,0,0,0"/>
		</Grid>

	</Grid>
</Window>
